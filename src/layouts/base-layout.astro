---
import ThemeToggle from '../components/theme-toggle.tsx';
import Search from '../components/search.tsx';
import { getCollection } from 'astro:content';

interface Props {
  title?: string;
  description?: string;
}

const siteTitle = "blog.colt45s.dev";
const siteDescription = "Colt45s' personal blog";
const author = "Colt45s";

const { title, description = siteDescription } = Astro.props;
const pageTitle = title ? `${title} | ${siteTitle}` : siteTitle;

const posts = (await getCollection('blog')).map((post) => ({
  id: post.id,
  title: post.data.title,
  description: post.data.description,
}));
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="alternate" type="application/atom+xml" title="RSS" href="/rss.xml" />
    <meta property="og:site_name" content={siteTitle} />
    <meta name="author" content={author} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <script is:inline>
      const theme = localStorage.getItem('theme') ??
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.dataset.theme = theme;
    </script>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="logo">blog.colt45s.dev</a>
        <nav>
          <Search client:load posts={posts} />
          <ThemeToggle client:load />
          <a href="/rss.xml" aria-label="RSS">RSS</a>
          <a href="https://github.com/colt45s" aria-label="GitHub">GitHub</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <div class="footer-content">
          <p class="footer-logo">Colt45s</p>
          <p class="footer-copy">&copy; {new Date().getFullYear()}</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
:root,
[data-theme="light"] {
  --color-bg: #f8f7f4;
  --color-surface: #ffffff;
  --color-border: #e8e6e1;
  --color-text: #1a1a1a;
  --color-text-muted: #6b6b6b;
  --color-accent: #1a1a1a;
  --color-accent-hover: #4a4a4a;
  --font-sans: "Noto Sans JP", "Hiragino Kaku Gothic ProN", "Yu Gothic", sans-serif;
}

[data-theme="dark"] {
  --color-bg: #0f0f0f;
  --color-surface: #1a1a1a;
  --color-border: #2a2a2a;
  --color-text: #f0efe9;
  --color-text-muted: #8a8a8a;
  --color-accent: #f0efe9;
  --color-accent-hover: #b0b0b0;
}

*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  background: var(--color-bg);
  color: var(--color-text);
  font-family: var(--font-sans);
  font-weight: 400;
  line-height: 1.9;
  min-height: 100vh;
  letter-spacing: 0.02em;
  transition: background-color 0.3s, color 0.3s;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  max-width: 800px;
  margin: 0 auto;
  padding: 0 2rem;
}

header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 3rem 0;
}

header nav {
  display: flex;
  align-items: center;
  gap: 2rem;
}

header nav a,
header nav astro-island {
  display: flex;
  align-items: center;
}

header nav a {
  font-size: 0.75rem;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: var(--color-text-muted);
  text-decoration: none;
  transition: color 0.3s;
}

header nav a:hover {
  color: var(--color-text);
}

.logo {
  font-family: var(--font-sans);
  font-weight: 700;
  font-size: 1.25rem;
  letter-spacing: 0.1em;
  color: var(--color-text);
  text-decoration: none;
  transition: opacity 0.3s;
}

.logo:hover {
  opacity: 0.6;
}

main {
  flex: 1;
  padding: 5rem 0;
}

footer {
  padding: 3rem 0;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-logo {
  font-family: var(--font-sans);
  font-weight: 500;
  font-size: 0.875rem;
  letter-spacing: 0.1em;
  color: var(--color-text-muted);
}

.footer-copy {
  font-size: 0.75rem;
  letter-spacing: 0.1em;
  color: var(--color-text-muted);
}

a {
  color: var(--color-accent);
  text-decoration: none;
  transition: opacity 0.3s;
}

a:hover {
  opacity: 0.6;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-sans);
  font-weight: 700;
  line-height: 1.4;
  color: var(--color-text);
}

h1 {
  font-size: 3rem;
  letter-spacing: -0.02em;
}

h2 {
  font-size: 2rem;
  letter-spacing: -0.01em;
}

h3 {
  font-size: 1.5rem;
}

p {
  margin: 1.5rem 0;
}

pre {
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  padding: 1.5rem;
  margin: 1.5rem 0 2.5rem;
  overflow-x: auto;
  font-family: "SF Mono", Menlo, monospace;
  font-size: 0.8125rem;
  line-height: 1.7;
}

code {
  font-family: "SF Mono", Menlo, monospace;
  font-size: 0.875em;
  background: var(--color-surface);
  padding: 0.2rem 0.4rem;
}

pre code {
  background: none;
  padding: 0;
}

img {
  max-width: 100%;
  height: auto;
}

blockquote {
  border-left: 2px solid var(--color-border);
  padding-left: 1.5rem;
  margin: 2rem 0;
  font-size: 1rem;
  color: var(--color-text-muted);
}

ul, ol {
  padding-left: 1.5rem;
  margin: 1.5rem 0;
}

li {
  margin: 0.75rem 0;
}

hr {
  border: none;
  border-top: 1px solid var(--color-border);
  margin: 4rem 0;
}

::selection {
  background: var(--color-text);
  color: var(--color-bg);
}

/* Reading Time */
.reading-time {
  font-size: 0.75rem;
  color: var(--color-text-muted);
}

/* Share Buttons */
.share-buttons {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border: none;
  background: transparent;
  color: var(--color-text-muted);
  cursor: pointer;
  transition: color 0.2s;
}

.share-btn:hover {
  color: var(--color-text);
}

/* Table of Contents */
.toc {
  margin-bottom: 2rem;
}

.toc-toggle {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: none;
  border: none;
  color: var(--color-text);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  padding: 0;
}

.toc-list {
  list-style: none;
  padding: 0;
  margin: 1rem 0 0;
}

.toc-item {
  margin: 0.5rem 0;
}

.toc-item a {
  font-size: 0.875rem;
  color: var(--color-text-muted);
  text-decoration: none;
}

.toc-item a:hover,
.toc-item.active a {
  color: var(--color-text);
}

.toc-level-3 {
  padding-left: 1rem;
}

/* Scroll to Top */
.scroll-to-top {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: 50%;
  color: var(--color-text-muted);
  cursor: pointer;
  transition: all 0.2s;
  z-index: 100;
}

.scroll-to-top:hover {
  border-color: var(--color-text-muted);
  color: var(--color-text);
}

/* Search */
.search-container {
  display: flex;
  align-items: center;
}

.search-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  color: var(--color-text-muted);
  cursor: pointer;
  padding: 0;
  transition: color 0.2s;
}

.search-toggle:hover {
  color: var(--color-text);
}

.search-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 20vh;
  z-index: 1000;
}

.search-modal {
  width: 90%;
  max-width: 500px;
  background: var(--color-bg);
  border: 1px solid var(--color-border);
  border-radius: 8px;
  overflow: hidden;
}

.search-input {
  width: 100%;
  padding: 1rem;
  border: none;
  background: var(--color-bg);
  color: var(--color-text);
  font-size: 1rem;
  font-family: inherit;
  outline: none;
}

.search-input::placeholder {
  color: var(--color-text-muted);
}

.search-results {
  list-style: none;
  padding: 0;
  margin: 0;
  border-top: 1px solid var(--color-border);
  max-height: 300px;
  overflow-y: auto;
}

.search-results li a {
  display: block;
  padding: 1rem;
  text-decoration: none;
  transition: background 0.2s;
}

.search-results li a:hover {
  background: var(--color-surface);
}

.result-title {
  display: block;
  color: var(--color-text);
  font-weight: 500;
}

.result-desc {
  display: block;
  font-size: 0.875rem;
  color: var(--color-text-muted);
  margin-top: 0.25rem;
}

.no-results {
  padding: 1rem;
  color: var(--color-text-muted);
  text-align: center;
}

/* Code Copy */
.code-block-wrapper {
  position: relative;
}

.code-copy-btn {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: var(--color-bg);
  border: 1px solid var(--color-border);
  border-radius: 4px;
  color: var(--color-text-muted);
  cursor: pointer;
  opacity: 0;
  transition: all 0.2s;
}

.code-block-wrapper:hover .code-copy-btn {
  opacity: 1;
}

.code-copy-btn:hover {
  color: var(--color-text);
  border-color: var(--color-text-muted);
}
</style>
